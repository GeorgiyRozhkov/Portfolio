extends ./main.layout.pug

block content
    .welcome-section
        section.hero 
            .container.hero__container 
                header.header 
                    .logo РГ
                    nav.menu
                        -var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                        ul.menu__list 
                            each item in menuItems
                                li.menu__item 
                                    a(href="#").menu__link #{item}
                    - var socials = ["insta", "vk", "github", "envelope"];              
                    ul.socials.socials--main
                        each item in socials 
                            li.socials__item
                                a(href="#").socials__icon
                                    +icon(item, "socials__icon")
                    a.hamburger(href="#")
                        span.hamburger__line  
                        span.hamburger__line  
                        span.hamburger__line  
                .hero__content 
                    h2.hero__title личный сайт веб-разработчика
                    h1.hero__name Рожков Георгий
                        
                a(href="#").hero__scroll Let's go!
                    +icon("arrow-down", "hero__scroll-icon")
        section.about 
            .container.about__container 
                .about__user 
                    .user 
                        .user__avatar 
                            .user__avatar-style 
                                +image("content/user.jpg", "user__avatar-img")
                        - 
                            var userInfo = [
                                ["Проживаю:", "Санкт-Петербург"],
                                ["Возраст:", "21 год"],
                                ["Характер:", "Скверный"],
                            ];
                        ul.user__data 
                            each item in userInfo 
                                li.user__data-row
                                    .user__data-title #{item[0]}
                                    .user__data-info #{item[1]} 
                .about__content 
                    .about__desc Привет, меня зовут
                    .about__title Георгий Рожков
                    .about__info Я занимаюсь разработкой современных сайтов и приложений. Мне нравится делать интересные и современные проекты.
                    .about__ps Этот сайт я сделал в рамках обучения в Школе онлайн образования LoftSchool. Чуть позже я освежу в нём свой контент. А пока посмотрите, как тут всё классно и красиво!
    section.values 
        .values__title Чем я могу быть полезен вам
        .values__widget
            #skills-component
    section.works 
        .container.works__container 
            .works__title Мои работы
            .works__content
                #preview-component
    section.reviews 
        .container 
            #slider-component
    footer.footer
        .container.footer__container
            .footer__side-left
                .footer__year ©2020
                .footer__name Георгий Рожков
                .footer__desc Личный сайт веб-разработчика
            .footer__side-right.footer__side-right--screen--desktop
                nav.menu.menu--theme--white.footer__menu
                    -var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                        ul.menu__list 
                            each item in menuItems
                                li.menu__item 
                                    a(href="#").menu__link #{item}
                .footer__content                    
                    .footer__info
                        .footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                        ul.socials
                                each item in socials 
                                    li.socials__item.socials__item--border--round
                                        a(href="#").socials__icon
                                            +icon(item, "socials__icon")
                    .quote
                        .quote__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                        .quote__author Martin Golding
            .footer__side-right.footer__side-right--screen--tablets
                nav.menu.menu--theme--white.footer__menu
                    -var menuItems = ["Обо мне", "Навыки", "Работы", "Отзывы"];
                        ul.menu__list.menu__list--footer
                            each item in menuItems
                                li.menu__item.menu__item--footer 
                                    a(href="#").menu__link #{item}                   
                .footer__info
                    .footer__text Этот сайт я сделал в рамках обучения в Школе онлайн образования Loftschool
                    ul.socials
                            each item in socials 
                                li.socials__item.socials__item--border--round
                                    a(href="#").socials__icon
                                        +icon(item, "socials__icon")
                .quote
                    .quote__text Всегда пишите код так, будто сопровождать его будет склонный к насилию психопат, который знает где вы живете
                    .quote__author Martin Golding
    .overlay    
        nav.menu.menu--modal
                    -var menuItems = ["Главная" ,"Обо мне", "Навыки", "Работы", "Отзывы"];
                        ul.menu__list.menu__list--modal
                            each item in menuItems
                                li.menu__item.menu__item--modal 
                                    a(href="#").menu__link #{item}
        - var socials = ["insta", "vk", "github", "envelope"];
        ul.socials.socials--modal
            each item in socials 
                li.socials__item.socials__item--modal.socials__item--border--round
                    a(href="#").socials__icon.socials__icon--modal
                        +icon(item, "socials__icon, socials__icon--modal")
        .overlay__cross
            +icon("cross", "overlay__cross-icon")


