.review{
    height: 225px;
    width: 375px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
}
.review__decor{
    position: absolute;
    width: 77px;
    left: -25%;
    fill: $grey;
}
.review__text{
    font-weight: 600;
    line-height: 30px;
    opacity: 0.6;
    z-index: 2;
}