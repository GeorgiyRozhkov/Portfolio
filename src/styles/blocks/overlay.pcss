.overlay{
    display: none;
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 10000;
    background: #fff;
    color: $blue;
    height: 100vh;
}
.overlay__cross{
    position: absolute;
    top: 5%;
    right: 5%;
    cursor: pointer;
}
.overlay__cross-icon{
    fill: $blue;
    width: 20px;
    height: 20px;
}